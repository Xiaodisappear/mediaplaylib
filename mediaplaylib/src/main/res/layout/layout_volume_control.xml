<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#000000">

    <com.zhiyun.feel.view.VerticalSeekBar
        android:id="@+id/seek_bar_volume"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="right|top"
        android:background="@color/transparent"
        android:backgroundTint="@color/transparent"
        android:foreground="@color/transparent"
        android:foregroundTint="@color/transparent"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@color/transparent"
        android:thumb="@color/transparent" />

    <FrameLayout
        android:id="@+id/volume_fl"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_white_corner"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="30dp"
            android:text="音量 "
            android:textColor="@color/color_535353" />

        <TextView
            android:id="@+id/volume_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="50%"
            android:textColor="@color/color_535353" />
    </FrameLayout>
</merge>